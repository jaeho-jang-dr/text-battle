# NextAuth Configuration
# Production: Use your actual domain (e.g., https://yourdomain.com)
# Development: Use http://localhost:3009
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-production-secret-key-here

# Firebase Configuration (Production)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Firebase Admin SDK (Production)
# Download from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----\n"

# Admin Credentials (Change these!)
ADMIN_USERNAME=change-this-username
ADMIN_PASSWORD=change-this-password

# Cron Job Secret (Change this!)
# Generate with: openssl rand -base64 32
CRON_SECRET=your-secure-cron-secret-here

# Optional: Kakao OAuth (if using)
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret

# Optional: OpenAI Configuration (for battle text generation)
OPENAI_API_KEY=your-openai-api-key